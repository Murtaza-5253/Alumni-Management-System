<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="5dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="8dp">

    <LinearLayout
        android:id="@+id/lytPlacements"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:visibility="visible"
        android:layout_margin="8dp"
        android:weightSum="6">
        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:src="@drawable/tcs"
            android:layout_gravity="center"
            android:id="@+id/imgCompany"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="4"
            android:weightSum="3">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:weightSum="2">
                <TextView
                    android:id="@+id/txtCyName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|right"

                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:layout_weight="1"
                    android:text="Company Name"/>

                <TextView
                    android:id="@+id/txtcyLocation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:layout_weight="1"
                    android:text="Branch Location"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:weightSum="2">
                <TextView
                    android:id="@+id/txtJobTitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:fontFamily="sans-serif-condensed-medium"

                    android:gravity="center"
                    android:text="Job Title"/>

                <TextView
                    android:id="@+id/txtJobType"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:fontFamily="sans-serif-condensed-medium"

                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Job Type"/>

            </LinearLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:weightSum="2">
                <TextView
                    android:id="@+id/txtExpectedSalary"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Expected Salary"/>


                <TextView
                    android:id="@+id/txtPostedOn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:layout_weight="1"
                    android:lines="2"
                    android:maxLines="3"
                    android:ems="3"
                    android:inputType="textMultiLine|textPostalAddress|textImeMultiLine"
                    android:gravity="center"
                    android:text="Job Posted On"/>


            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
            android:layout_marginStart="25dp"
            android:layout_gravity="end|center"
            android:gravity="end"
            android:id="@+id/imgMore"
            android:layout_weight="1"/>

    </LinearLayout>


</androidx.cardview.widget.CardView >