<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="8dp">
<!--    Alumni Design-->
    <LinearLayout
        android:id="@+id/lytAlumni"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:layout_margin="8dp"
        android:weightSum="6">
        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:src="@drawable/alumni_tbslct"
            android:id="@+id/imgAlProfile"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="3"
            android:weightSum="3">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:weightSum="2">
                <TextView
                    android:id="@+id/txtAlName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|right"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:layout_weight="1"
                    android:text="Name"/>

                <TextView
                    android:id="@+id/txtAlBranch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:layout_weight="1"
                    android:text="Branch"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:weightSum="2">
                <TextView
                    android:id="@+id/txtAlBatch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:fontFamily="sans-serif-condensed-medium"

                    android:gravity="center"
                    android:text="Batch"/>

                <TextView
                    android:id="@+id/txtAlDept"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:fontFamily="sans-serif-condensed-medium"

                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Department"/>

            </LinearLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:weightSum="3">
                <TextView
                    android:id="@+id/txtAlCompany"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:fontFamily="sans-serif-condensed-medium"

                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Company"/>

                <TextView
                    android:id="@+id/txtAlPost"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:fontFamily="sans-serif-condensed-medium"

                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Post"/>
                <TextView
                    android:id="@+id/txtAlPackage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Package"/>


            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="left"
            android:gravity="left"
            android:weightSum="2"
            android:layout_weight="2">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:src="@drawable/ic_baseline_edit_24"
                android:layout_marginStart="25dp"
                android:layout_gravity="left|center"
                android:id="@+id/imgEdit"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_marginStart="15dp"
                android:src="@drawable/ic_baseline_delete_forever_24"
                android:layout_gravity="left|center"
                android:id="@+id/imgdeleteprofile"
                android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>






</androidx.cardview.widget.CardView>